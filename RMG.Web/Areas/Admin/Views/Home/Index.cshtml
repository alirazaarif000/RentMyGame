<!-- Container-fluid starts-->
<div class="container-fluid">
    <div class="row">
        <div class="col-xxl-3 col-md-6 xl-50">
            <div class="card o-hidden widget-cards">
                <div class="warning-box card-body">
                    <div class="media static-top-widget align-items-center">
                        <div class="icons-widgets">
                            <div class="align-self-center text-center">
                                <i data-feather="navigation" class="font-warning"></i>
                            </div>
                        </div>
                        <div class="media-body media-doller">
                            <span class="m-0">Earnings</span>
                            <h3 class="mb-0">
                                $ <span id="earning" class="counter"></span><small>
                                    Last 30
                                    Days
                                </small>
                            </h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xxl-3 col-md-6 xl-50">
            <div class="card o-hidden widget-cards">
                <div class="secondary-box card-body">
                    <div class="media static-top-widget align-items-center">
                        <div class="icons-widgets">
                            <div class="align-self-center text-center">
                                <i data-feather="box" class="font-secondary"></i>
                            </div>
                        </div>
                        <div class="media-body media-doller">
                            <span  class="m-0"> New Games</span>
                            <h3 class="mb-0">
                                <span id="newGames" class="counter"></span><small>
                                    Last 30
                                    Days
                                </small>
                            </h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xxl-3 col-md-6 xl-50">
            <div class="card o-hidden widget-cards">
                <div class="primary-box card-body">
                    <div class="media static-top-widget align-items-center">
                        <div class="icons-widgets">
                            <div class="align-self-center text-center">
                                <i data-feather="monitor"
                                   class="font-primary"></i>
                            </div>
                        </div>
                        <div class="media-body media-doller">
                            <span class="m-0">Rented Games</span>
                            <h3 class="mb-0">
                                 <span id="rentedGames"class="counter"></span><small>
                                    Last 30
                                    Days
                                </small>
                            </h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xxl-3 col-md-6 xl-50">
            <div class="card o-hidden widget-cards">
                <div class="danger-box card-body">
                    <div class="media static-top-widget align-items-center">
                        <div class="icons-widgets">
                            <div class="align-self-center text-center">
                                <i data-feather="users"
                                   class="font-danger"></i>
                            </div>
                        </div>
                        <div class="media-body media-doller">
                            <span class="m-0">New Registered Users</span>
                            <h3 class="mb-0">
                                 <span id="newUsers" class="counter"></span><small>
                                    Last 30
                                    Days
                                </small>
                            </h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-6 xl-100">
            <div class="card">
                <div class="card-header">
                    <h5>Latest Products</h5>
                </div>
                <div class="card-body">
                    <div class="user-status table-responsive latest-order-table">
                        <table class="table table-bordernone">
                            <thead>
                                <tr>
                                    <th scope="col">Product ID</th>
                                    <th scope="col">Game Name</th>
                                    <th scope="col">Genre</th>
                                    <th scope="col">Platform</th>
                                    <th scope="col">Release Date</th>
                                </tr>
                            </thead>
                            <tbody id="latestProducts">
                                
                            </tbody>
                        </table>
                        <a asp-controller="Game" asp-action="Index" class="btn btn-primary mt-4">View All Products</a>
                    </div>
                    
                </div>
            </div>
        </div>
</div>
</div>

@section Scripts{
    @{
        <script src="~/jsfiles/dashboard.js"></script>
    }
}